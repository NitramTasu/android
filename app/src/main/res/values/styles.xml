<resources>

    <style name="RioBus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/riobus_accent</item>
        <item name="colorPrimary">@color/riobus_primary</item>
        <item name="colorPrimaryDark">@color/riobus_primary_dark</item>
        <item name="android:textColorPrimary">@color/riobus_primary_text</item>
        <item name="android:textColorSecondary">@color/riobus_secondary_text</item>
        <item name="android:windowBackground">@color/riobus_window_background</item>
        <item name="android:textColor">@color/riobus_text</item>
    </style>

    <style name="RioBus.ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/riobus_primary</item>
    </style>

    <style name="RioBus.Navigation">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="RioBus.Navigation.View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="RioBus.Navigation.Header">
        <item name="android:layout_height">@dimen/riobus_nav_header_height</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@color/riobus_primary_dark</item>
    </style>

    <style name="RioBus.Navigation.Header.Icon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="android:paddingLeft">@dimen/riobus_spacing_short</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="RioBus.Navigation.Header.Title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">12pt</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="RioBus.Map">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RioBus.Map.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:max">100</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="RioBus.Map.FloatPositionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_location_on</item>
        <item name="android:layout_marginBottom">@dimen/riobus_floating_button_margin</item>
        <item name="android:layout_marginRight">@dimen/riobus_floating_button_margin</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="RioBus.History">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RioBus.History.List">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">@dimen/riobus_spacing_short</item>
    </style>

    <style name="RioBus.History.Group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/riobus_spacing_middle</item>
        <item name="android:textColor">#2d2d2d</item>
    </style>

    <style name="RioBus.History.Group.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="RioBus.History.Group.Item">
    </style>

    <style name="RioBus.History.Group.Item.Title">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RioBus.History.Group.Item.Date">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="RioBus.Favorite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RioBus.Favorite.Star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/riobus_spacing_short</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
