<resources>

    <style name="RioBus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/riobus_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/riobus_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/riobus_accent</item>
        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/riobus_primary_text</item>
        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/riobus_secondary_text</item>

        <item name="android:windowBackground">@color/riobus_window_background</item>

    </style>

    <style name="RioBus.ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/riobus_primary</item>
    </style>

    <style name="RioBus.Map">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RioBus.Map.ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:max">100</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="botao">
        <item name="android:background">@drawable/rounded_corners_white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">15dp</item>
    </style>

</resources>
