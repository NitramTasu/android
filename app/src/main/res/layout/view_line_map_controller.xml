<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="@dimen/riobus_spacing_middle">

    <ImageButton
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:id="@+id/changeSenseButton"
        android:background="@android:color/white"
        android:tint="@color/riobus_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_swap_calls_black"/>

    <TextView
        android:id="@+id/firstLineEndPoint"
        android:layout_toRightOf="@id/changeSenseButton"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />

    <TextView
        android:id="@+id/secondLineEndPoint"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/changeSenseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"/>

    <com.tormentaLabs.riobus.favorite.view.FavoriteStarView_
        android:id="@+id/favoriteStarView"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/divider"
        android:layout_toRightOf="@id/changeSenseButton"
        android:layout_centerInParent="true"
        android:background="@color/riobus_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_toLeftOf="@id/favoriteStarView"/>

</RelativeLayout>